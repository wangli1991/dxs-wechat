<view class="tab-bar">
  <view class="tab-bar-border"></view>
  <view wx:for="{{list}}" wx:key="index" class="tab-bar-item" data-index="{{index}}" bindtap="onChange">
    <view class="info" wx:if="{{item.info}}">{{item.info}}</view>
    <image class="img" src="{{active === index ? item.selectedIconPath : item.iconPath}}" mode="aspectFit" />
    <view class="text" style="color: {{active === index ? selectedColor : color}}">
      {{item.text}}
    </view>
  </view>
</view>