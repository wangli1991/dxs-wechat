.search-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  overflow: hidden;
}
.search-container .search-form {
  flex: 0;
  flex-basis: auto;
  display: flex;
  align-items: center;
}
.search-container .search-form .search-input {
  flex: 1;
  border: 1px solid #02c521;
  display: flex;
  border-radius: 30rpx;
  margin-left: 30rpx;
}
.search-container .search-form .iconfont {
  width: 60rpx;
  color: #02c521;
  text-align: center;
  line-height: 60rpx;
}
.search-container .search-form .input {
  height: 60rpx;
  font-size: 30rpx;
}
.search-container .search-form .search-action {
  color: #02c521;
  padding: 0 30rpx;
}
.search-content {
  flex: 1;
  overflow-y: auto;
  position: relative;
}
.search-quick {
  padding: 10px 15px 0;
}
.search-quick .quick-container.history {
  padding-bottom: 30rpx;
}
.search-quick .header {
  display: flex;
  justify-content: space-between;
}
.search-quick .header .title {
  font-size: 35rpx;
}
.search-quick .header .action {
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
}
.search-quick .header .action .icon-delete {
  font-size: 28rpx;
}
.search-quick .content {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.search-quick .content .item {
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  line-height: 1;
  border-radius: 15rpx;
  background-color: #f6f6f6;
  color: #666;
  margin: 0 20rpx 30rpx 0;
}

.search-keyword {
  padding: 0 22rpx;
}
.search-keyword .item {
  color: #333;
  border-bottom: 2rpx solid #ebebeb;
  line-height: 70rpx;
  font-size: 28rpx;
}

.search-product {
  flex: 1;
  padding: 0 22rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.search-product .head {
  border-bottom: 1px solid #ebebeb;
  flex: 0;
  flex-basis: auto;
  display: flex;
  justify-content: space-around;
}
.search-product .head .head-item {
  height: 80rpx;
  display: flex;
  align-items: center;
}
.search-product .head .head-item .text {
  color: #636262;
  font-size: 30rpx;
  line-height: 1;
}
.search-product .head .head-item.active .text {
  color: #02c521;
}
.search-product .head .icons {
  margin-left: 5rpx;
}
.search-product .head .icons .item {
  width: 14rpx;
  height: 14rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
.search-product .head .icons .iconfont {
  font-size: 28rpx;
  color: #636262;
}
.search-product .head .head-item.active .icons .iconfont.active {
  color: #02c521;
}

.search-product .products {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.search-product .products .item {
  width: 100%;
  display: flex;
  justify-content: space-between;
  border-top: 2rpx solid #ebebeb;
  padding: 20rpx 0;
}
.search-product .products .item:first-child {
  border-top: 0;
}
.search-product .products .img-container {
  width: 260rpx;
  height: 260rpx;
  background-color: #f8f9fb;
  border-radius: 20rpx;
  flex: 0;
  flex-basis: auto;
  overflow: hidden;
}
.search-product .products .img-container .img {
  width: 100%;
  height: 100%;
}
.search-product .products .content {
  flex: 1;
  margin-left: 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.search-product .products .header .title {
  color: #333;
  font-weight: bold;
}
.search-product .products .tag {
  display: inline-block;
  font-size: 20rpx;
  color: #02c521;
  line-height: 1;
  padding: 3px;
  background-color: rgba(7, 193, 96, 0.1);
  border-radius: 2rpx;
}
.search-product .products .tag.discount {
  color: #fe321a;
  background-color: rgba(255, 0, 0, 0.1);
}
.search-product .products .buy {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}
.search-product .products .buy-price {
  display: flex;
  align-items: flex-end;
}
.search-product .products .buy-price .now {
  color: #fe321a;
  line-height: 1;
  display: flex;
  align-items: flex-end;
}
.search-product .products .buy-price .old {
  color: #999;
  line-height: 1;
}
.search-product .products .btn {
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 25rpx;
  color: #fff;
  text-align: center;
  border-radius: 30rpx;
  background-image: linear-gradient(#ff5a16, #fe321a);
}
