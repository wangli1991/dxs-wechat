.header {
  background-color: #02c521;
}
.home-top {
  background-image: linear-gradient(#fff, #f4f5fa);
}
.swiper-container {
  border-radius: 20rpx;
  overflow: hidden;
  margin: 0 22rpx;
}
.swiper-container .img {
  width: 100%;
  height: 100%;
}
.home-desc {
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.home-desc .item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #02c521;
  line-height: 60rpx;
}
.home-desc .iconfont {
  font-size: 24rpx;
  margin-right: 10rpx;
}
.home-classify {
  margin-top: 20rpx;
}
.home-classify .scroll-classify {
  width: 100%;
  white-space: nowrap;
}
.home-classify .scroll-classify .item {
  display: inline-block;
  text-align: center;
}
.home-classify .scroll-classify .item .content {
  width: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.home-classify .scroll-classify .img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}
.home-classify .scroll-classify .text {
  font-size: 24rpx;
  line-height: 60rpx;
  color: #333;
}
.home-classify .scroll-bar {
  width: 60rpx;
  height: 8rpx;
  border-radius: 4rpx;
  position: relative;
  margin: 12rpx auto 30rpx;
  background-color: #ccc;
  overflow: hidden;
}
.home-classify .scroll-bar .scroll-bar-active {
  width: 50%;
  height: 100%;
  border-radius: 4rpx;
  background-color: #02c521;
  overflow: hidden;
}
.home-bottom {
  padding: 0 22rpx;
}
.home-discount {
  padding: 0 10rpx;
  background-image: linear-gradient(#f97c48, #fff);
}
.seckill {
  padding: 0 22rpx;
}
.home-seckill {
  border-radius: 20rpx;
  background-color: #fff;
  overflow: hidden;
  border: 2rpx solid #eee;
  margin-top: 20rpx;
}
.seckill-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 20rpx;
}
.seckill-header .left {
  display: flex;
  align-items: center;
}
.seckill-header .icon {
  margin-right: 10rpx;
}
.seckill-header .icon .img {
  width: 138rpx;
  height: 32rpx;
}
.seckill-header .tag {
  display: flex;
  font-size: 24rpx;
}
.seckill-header .tag .title {
  background-image: linear-gradient(to right, #ff5a16, #ff3634);
  color: #fff;
  padding: 5rpx 10rpx;
  border-top-left-radius: 8rpx;
  overflow: hidden;
  line-height: 1;
}
.seckill-header .tag .time {
  padding: 3rpx 10rpx;
  border-bottom-right-radius: 8rpx;
  overflow: hidden;
  border: 2rpx solid #ff3634;
  border-left: none;
  color: #ff3634;
  line-height: 1;
}
.seckill-header .more {
  font-size: 24rpx;
  display: flex;
  align-items: center;
}
.home-discount {
  border: none;
  margin-top: 0;
}
.home-discount .seckill-header {
  padding: 20rpx 0;
}
.home-discount .seckill-header .tag .text {
  padding: 5rpx 10rpx;
  background-image: linear-gradient(to right, #ff5a16, #ff3634);
  color: #fff;
  font-size: 22rpx;
  line-height: 1;
  border-top-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}
.home-discount .seckill-header .more {
  color: #fff;
}
.home-discount .seckill-container {
  padding-top: 10rpx;
}
.seckill-container {
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  padding-bottom: 10rpx;
}
.seckill-container .scroll-seckill {
  width: 100%;
  height: 330rpx;
  white-space: nowrap;
  display: flex;
}
.seckill-container .seckill-products {
  display: flex;
  padding-left: 5rpx;
}
.seckill-container .seckill-products .item {
  width: 190rpx;
  padding: 0 5rpx;
}
.seckill-container .seckill-products .image-container {
  width: 180rpx;
  height: 180rpx;
  background-color: #f8f9fb;
  border-radius: 20rpx;
  flex: 0;
  flex-basis: auto;
  overflow: hidden;
}
.seckill-container .seckill-products .image-container .img {
  width: 180rpx;
  height: 180rpx;
}
.seckill-container .seckill-products .title {
  color: #333;
  font-size: 24rpx;
  line-height: 50rpx;
}
.seckill-container .seckill-products .price {
  color: #ff3634;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}
.seckill-container .seckill-products .price .unit {
  font-size: 22rpx;
  line-height: 1;
}
.seckill-container .seckill-products .price .num {
  font-size: 40rpx;
  line-height: 30rpx;
}
.seckill-container .seckill-products .btn {
  width: calc(100% - 20rpx);
  margin: 0 auto;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 25rpx;
  color: #fff;
  text-align: center;
  border-radius: 30rpx;
  margin-top: 10rpx;
  background-image: linear-gradient(#ff5a16, #ff3634);
}
.seckill-container .seckill-more {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 15rpx 0 10rpx;
}
.seckill-container .seckill-more .text {
  font-size: 26rpx;
  color: #999;
  line-height: 34rpx;
  writing-mode: vertical-rl;
  letter-spacing: 5rpx;
}
.seckill-container .seckill-more .iconfont {
  width: 26rpx;
  height: 26rpx;
  border: 2rpx solid #999;
  border-radius: 50%;
  color: #999;
  font-size: 22rpx;
}
.recommend-container {
  margin-top: 16rpx;
}
