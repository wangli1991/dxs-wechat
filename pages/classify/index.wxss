.classify-header {
  background-color: #fff;
}
.classify-tips {
  font-size: 30rpx;
  text-align: center;
  line-height: 80rpx;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  color: #666;
  background-color: #fff;
}
.classify-container {
  height: 100%;
  padding-top: 30rpx;
  display: flex;
  background-color: #fff;
}
.classify-side {
  width: 160rpx;
  height: 100%;
}
.classify-side-scroll {
  width: 100%;
  height: 100%;
  background-color: #f8f9fb;
}
.scroll-view-item {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.scroll-view-item.active {
  background-color: #fff;
}
.scroll-view-item .text {
  font-size: 26rpx;
  color: #636262;
  line-height: 80rpx;
}
.scroll-view-item .iconfont {
  color: #ff3634;
  margin-right: 5rpx;
  font-size: 26rpx;
}
.scroll-view-item.active .text {
  color: #02c521;
  font-weight: bold;
}
.scroll-view-item.active::after {
  content: "";
  width: 6rpx;
  height: 40rpx;
  background-color: #02c521;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -20rpx;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.classify-content {
  height: 100%;
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}
.classify-content .head {
  border-bottom: 1px solid #ebebeb;
  flex: 0;
  flex-basis: auto;
  display: flex;
}
.classify-content .head .head-item {
  margin-right: 40rpx;
  line-height: 60rpx;
  display: flex;
  align-items: center;
}
.classify-content .head .head-item .text {
  color: #636262;
}
.classify-content .head .head-item.active .text {
  color: #ff3634;
  font-weight: bold;
}
.classify-content .head .icons {
  margin-left: 5rpx;
}
.classify-content .head .icons .item {
  width: 10rpx;
  height: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
.classify-content .head .icons .iconfont {
  font-size: 18rpx;
  color: #636262;
}
.classify-content .head .head-item.active .icons .iconfont.active {
  color: #02c521;
}
.classify-content .foot {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.classify-content .classify-item {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.classify-content .classify-item:first-child .content {
  border-top: 0;
}
.classify-content .img-container {
  width: 200rpx;
  height: 200rpx;
  background-color: #f8f9fb;
  border-radius: 20rpx;
  flex: 0;
  flex-basis: auto;
  overflow: hidden;
}
.classify-content .img-container .img {
  width: 100%;
  height: 100%;
}
.classify-content .content {
  height: 240rpx;
  flex: 1;
  margin-left: 15rpx;
  border-top: 2rpx solid #ebebeb;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-right: 40rpx;
}
.classify-content .header .title {
  color: #333;
  font-weight: bold;
}
.classify-content .tag {
  display: inline-block;
  font-size: 20rpx;
  color: #02c521;
  line-height: 1;
  padding: 3px;
  background-color: rgba(7, 193, 96, 0.1);
  border-radius: 2rpx;
}
.classify-content .tag.discount {
  color: #ff3634;
  background-color: rgba(255, 0, 0, 0.1);
}
.classify-content .buy {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}
.classify-content .buy-price {
  display: flex;
  align-items: flex-end;
}
.classify-content .buy-price .now {
  color: #ff3634;
  line-height: 1;
  display: flex;
  align-items: flex-end;
}
.classify-content .buy-price .old {
  color: #999;
  line-height: 1;
}
.classify-content .buy-cart {
  width: 50rpx;
  height: 50rpx;
  background-color: #02c521;
  color: #fff;
  line-height: 50rpx;
  border-radius: 50%;
  text-align: center;
}
.classify-content .buy-cart .iconfont {
  font-size: 32rpx;
}
